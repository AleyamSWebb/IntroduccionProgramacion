import java.util.Scanner;

public class NumeroParImpar
{
    public static void main( String[] args )
    {
        int numero;
        Scanner teclado = new Scanner( System.in );

        System.out.printf( "Introduzca un n√∫mero entero: " );
        numero = teclado.nextInt();

        if ( numero % 2 == 0 )
        {
            System.out.printf( "ES PAR POSITIVO" );
        }
        
        if ( numero % -2 == 0 )
        {
            System.out.printf( "ES PAR NEGATIVO" );
        }
        
            if ( numero % -2 == 0 )
        {
            System.out.printf( "ES IMPAR NEGATIVP" );
        
         if ( numero % 3 == 0 )
        {
        
            System.out.printf( "ES IMPAR POSITICVO" );
        }
        }
    }
